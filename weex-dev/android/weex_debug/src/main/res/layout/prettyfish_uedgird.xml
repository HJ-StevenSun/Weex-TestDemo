<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <com.taobao.prettyfish.ued.grid.UedGridView
        android:id="@+id/uedGirdView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.taobao.prettyfish.ued.grid.RulerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            custom:rulerColor="@color/pf_blue_dark"
            custom:rulerOrientation="horizental"/>

    <com.taobao.prettyfish.ued.grid.RulerView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            custom:rulerColor="@color/pf_blue_dark"
            custom:rulerOrientation="vertical"/>
