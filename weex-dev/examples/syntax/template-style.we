<!--
  * inline style with data binding
-->

<template>
  <div onclick="update">
    <text style="font-size: 48px; color: #0000ff">Hello</text>
    <text style="font-size: {{size}}; color: {{color}}">Hello</text>
  </div>
</template>

<script>
  module.exports = {
    data: {
      size: 32,
      color: '#ff0000'
    },
    methods: {
      update: function (e) {
        this.size = 48
      }
    }
  }
</script>
